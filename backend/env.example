# Database
DATABASE_URL="postgresql://username:password@localhost:5432/pulse_finance"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Admin Authentication
ADMIN_JWT_SECRET="your-super-secret-admin-jwt-key-change-this-in-production"

# Server
PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"

# Stripe (Payment Processing)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PRICE_MONTHLY="price_monthly_plan_id"
STRIPE_PRICE_YEARLY="price_yearly_plan_id"

# Email (SendGrid)
SENDGRID_API_KEY="SG_your_sendgrid_api_key"
FROM_EMAIL="noreply@pulsefinance.com"
FROM_NAME="Pulse Finance"

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="pulse-finance-uploads"

# Redis (Sessions & Caching)
REDIS_URL="redis://localhost:6379"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development vs Production Rate Limiting
# For development, use much higher limits or disable entirely
# For production, use the values above
# Development settings (uncomment for development):
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=1000

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id-here"

# SMS Service (Floki SMS)
FLOKI_SMS_URL="https://flokisystems.com/flokisms/send-otp.php"
FLOKI_SMS_TOKEN="floki-secure-token-9f8e4c1f79284d99bdad6c74ea7ac2f1"
APP_NAME="Pulse Robot"

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT_HOURS=1

# Logging
LOG_LEVEL="info"
