# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/masareefy

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Kashier Payment Gateway Configuration
KASHIER_BASE_URL=https://test-fep.kashier.io
KASHIER_MERCHANT_ID=MID-XXX-XXX
KASHIER_API_KEY=xxxxxxxxxxxxxxxx
KASHIER_MODE=test
KASHIER_WEBHOOK_URL=https://myapp.com/api/payments/webhook
KASHIER_MERCHANT_REDIRECT=https://myapp.com/api/payments/redirect

# Production Kashier Configuration (uncomment for production)
# KASHIER_BASE_URL=https://fep.kashier.io
# KASHIER_MODE=live
# KASHIER_WEBHOOK_URL=https://yourdomain.com/api/payments/webhook
# KASHIER_MERCHANT_REDIRECT=https://yourdomain.com/api/payments/redirect

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100