{
    "name": "pulse-finance-backend",
    "version": "1.0.0",
    "description": "SaaS Financial Management Platform Backend",
    "main": "dist/app.js",
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
        "build": "tsc",
        "start": "node -r tsconfig-paths/register dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:studio": "prisma studio",
        "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
        "check:subscriptions": "node scripts/check-subscriptions.js",
        "process:due-items": "node scripts/process-due-items.js",
        "seed:plans": "node seed-plans.js"
    },
    "keywords": [
        "finance",
        "saas",
        "multi-tenant",
        "subscription"
    ],
    "author": "Pulse Finance Team",
    "license": "MIT",
    "dependencies": {
        "@prisma/client": "^5.7.1",
        "@sendgrid/mail": "^8.0.1",
        "@types/bcrypt": "^6.0.0",
        "@types/mongoose": "^5.11.96",
        "@types/node-cron": "^3.0.11",
        "@types/uuid": "^10.0.0",
        "aws-sdk": "^2.1490.0",
        "axios": "^1.12.2",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "module-alias": "^2.2.3",
        "mongoose": "^8.18.0",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^4.2.1",
        "redis": "^4.6.10",
        "socket.io": "^4.7.4",
        "stripe": "^14.7.0",
        "uuid": "^12.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
