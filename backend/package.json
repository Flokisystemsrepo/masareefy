        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "prisma": "^5.7.1",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    }
